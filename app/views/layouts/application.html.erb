<!DOCTYPE html>

<html>
  <head>
    <title>Pickup Sports</title>
    <%= stylesheet_link_tag 'gmaps4rails' %>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
  </head>
  <body class="<%= controller.controller_name %>">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div id="banner">

      <%= image_tag("logo2.jpg", :size => "50x50") %>
      <%= @page_title || "Pickup Sports" %>
    </div>
    <div id="columns">
      <div id="side">
        <ul>
         <% if user_signed_in? then %>
         <li><%= link_to "games", :controller => 'games', :action => 'index' %></li>
         <li><%= link_to "sign out" , destroy_user_session_path, :method => :delete%></li>
         <% end %>
	</ul>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </body>
  <footer>
    <%= yield :scripts %>
  </footer>
</html>


